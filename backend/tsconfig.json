{
    "compilerOptions": {
      "experimentalDecorators": true,
      "strictPropertyInitialization": false,
      "emitDecoratorMetadata": true,
      "target": "es6",
      "module": "commonjs",
      "rootDir": "./src",
      "outDir": "./dist",
      "baseUrl": "./src",
      "paths": {
        "@modules/*": ["modules/*"],
        "@shared/*": ["shared/*"]
      },
      "esModuleInterop": true,
      "strict": true
    }
  }